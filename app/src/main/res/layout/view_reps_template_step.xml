<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/repsStepPosText"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/yellow"
        android:gravity="center"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/repsStepExerciseText"
        android:layout_width="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/repsStepPosText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/yellow"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:id="@+id/repsStepMinEditText"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/dark_blue"
        android:textColor="@color/yellow"
        android:textSize="11sp"
        android:inputType="number"
        android:textCursorDrawable="@null"
        app:layout_constraintStart_toEndOf="@+id/repsStepExerciseText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </EditText>

    <TextView
        android:id="@+id/repsStepDash"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/repsStepMinEditText"
        app:layout_constraintStart_toEndOf="@+id/repsStepMinEditText"
        app:layout_constraintBottom_toBottomOf="@+id/repsStepMinEditText"
        android:textColor="@color/yellow"
        android:gravity="center"
        android:textSize="12sp"
        android:text="-"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:id="@+id/repsStepsMaxEditText"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/dark_blue"
        android:textColor="@color/yellow"
        android:textSize="11sp"
        android:inputType="number"
        android:textCursorDrawable="@null"
        app:layout_constraintStart_toEndOf="@+id/repsStepDash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </EditText>

    <Button
        android:id="@+id/repsStepDeleteButton"
        android:layout_width="37dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:textColor="@color/dark_blue"
        android:text="X">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>