<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/weightStepPosText"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightStepExerciseText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/yellow"
        android:gravity="center"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/weightStepExerciseText"
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/yellow"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:id="@+id/weightStepRepsEditText"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/blue"
        android:textColor="@color/yellow"
        android:textSize="15sp"
        android:inputType="number"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/weightStepExerciseText"
        app:layout_constraintStart_toEndOf="@+id/weightStepPosText"
        app:layout_constraintBottom_toBottomOf="parent" >
    </EditText>

    <TextView
        android:id="@+id/weightStepX"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/weightStepRepsEditText"
        app:layout_constraintBottom_toBottomOf="@+id/weightStepRepsEditText"
        android:textColor="@color/yellow"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:text=" x"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:id="@+id/weightStepWeightEditText"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/blue"
        android:textColor="@color/yellow"
        android:textSize="15sp"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/weightStepX"
        app:layout_constraintTop_toBottomOf="@+id/weightStepExerciseText" >
    </EditText>

    <TextView
        android:id="@+id/weightStepkgs"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/weightStepWeightEditText"
        app:layout_constraintBottom_toBottomOf="@+id/weightStepWeightEditText"
        android:textColor="@color/yellow"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:text="kgs"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/weightStepRecordWeight"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/weightStepWeightEditText"
        app:layout_constraintTop_toTopOf="@+id/weightStepWeightEditText"
        android:textColor="@color/green"
        android:gravity="end"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:textStyle="bold">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>